<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="~/css/adminlayout.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container d-flex flex-column flex-lg-row">
        <!-- Sidebar -->
        <div class="sidenav bg-dark text-light">
            <h3 class="text-center py-3">Admin Panel</h3>
            <a class="navigation-link" href="/Home/Index"><i class="bi bi-house-door"></i> Home</a>
            <a href="/AdminOperations/AllOrders" class="navigation-link"><i class="bi bi-receipt"></i> Orders</a>
            <a href="/Stock/Index" class="navigation-link"><i class="bi bi-archive"></i> Stock</a>
            <a href="/Category/Index" class="navigation-link"><i class="bi bi-collection"></i> Category</a>
            <a href="/Shoe/Index" class="navigation-link"><i class="bi bi-box-seam"></i> Shoe</a>
            <a href="/AdminOperations/UserManagement" class="navigation-link"><i class="bi bi-people"></i> Users</a>
        </div>

        <!-- Right Panel -->
        <div class="right-panel flex-grow-1">
            <!-- Navbar -->
            <nav class="nav-bar bg-light p-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="nav-heading">Welcome, <strong>@User.Identity?.Name</strong></div>
                <div class="nav-actions d-flex align-items-center gap-3 mt-3 mt-md-0">
                    <a href="/Identity/Account/Manage/Index" class="navigation-link"><i class="bi bi-gear"></i> Manage Account</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>

            <!-- Content -->
            <div class="content p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
